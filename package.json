{
  "name": "beginner-band",
  "version": "1.0.0",
  "description": "application to help students choose own instruments",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "cd server && npm start",
    "start:dev": "concurrently \"cd server && npm run watch\" \"cd client && npm start\"",
    "install": "cd server && npm i && cd ../client && npm i",
    "seed": "cd server && npm run seed",
    "heroku-postbuild": "cd client && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jnunez1229/beginner-band.git"
  },
  "author": "Juan Nunez",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jnunez1229/beginner-band/issues"
  },
  "homepage": "https://github.com/jnunez1229/beginner-band#readme",
  "dependencies": {
    "apollo-server-express": "^2.25.1",
    "bcrypt": "^5.0.1",
    "emailjs-com": "^3.1.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.14"
  },
  "devDependencies": {
    "concurrently": "^6.2.0"
  }
}
